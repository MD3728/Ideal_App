    <Style x:Key="SlideToggleButton" TargetType="ToggleButton">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="ToggleButton">
            <Border Width="68" Height="34" BorderBrush="Black" BorderThickness="1" CornerRadius="16" Background="#FFACACAC">
              <Grid>
                <Rectangle x:Name="SlideBackground" Fill="White" RadiusX="14" RadiusY="14" Margin="2"/>
                <Rectangle x:Name="Slider" Width="24" Height="24" Fill="Gray" RadiusX="12" RadiusY="12" HorizontalAlignment="Left" Margin="4"/>
              </Grid>
            </Border>
            <ControlTemplate.Triggers>
              <Trigger Property="IsChecked" Value="True">
                <Setter Property="Fill" TargetName="SlideBackground" Value="#0078d7"/>
                <Setter Property="Fill" TargetName="Slider" Value="lightGray"/>
                <Trigger.EnterActions>
                  <BeginStoryboard>
                    <Storyboard>
                      <ThicknessAnimation Storyboard.TargetName="Slider" Storyboard.TargetProperty="Margin" To="36,2,2,2" Duration="0:0:0.15"/>
                    </Storyboard>
                  </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                  <BeginStoryboard>
                    <Storyboard>
                      <ThicknessAnimation Storyboard.TargetName="Slider" Storyboard.TargetProperty="Margin" To="4,2,2,2" Duration="0:0:0.15"/>
                    </Storyboard>
                  </BeginStoryboard>
                </Trigger.ExitActions>
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>

